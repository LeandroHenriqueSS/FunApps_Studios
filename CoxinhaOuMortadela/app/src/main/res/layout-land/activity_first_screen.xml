<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#406f7c"
    android:weightSum="1">

    <!-- Blank View equivalent to <android.support.v4.widget.Space -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".05" />

    <ImageView
        android:id="@+id/iv_main_image"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".65"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="@string/cd_main_logo"
        android:src="@drawable/main_logo" />

    <!-- Blank View equivalent to <android.support.v4.widget.Space -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".05" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".20"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bt_start_quiz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_color_shape"
            android:onClick="onClickStartQuiz"
            android:padding="10dp"
            android:text="@string/bt_start_quiz"
            android:textSize="24sp" />


        <Button
            android:id="@+id/bt_my_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:background="@drawable/button_color_shape"
            android:onClick="onClickShowResultActivity"
            android:padding="10dp"
            android:text="@string/bt_my_result"
            android:textSize="24sp" />


        <Button
            android:id="@+id/bt_ranks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:background="@drawable/button_color_shape"
            android:onClick="onClickShowStatistics"
            android:padding="10dp"
            android:text="@string/bt_rank"
            android:textSize="24sp" />



    </LinearLayout>

    <!-- Blank View equivalent to <android.support.v4.widget.Space -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".05" />


</LinearLayout>
