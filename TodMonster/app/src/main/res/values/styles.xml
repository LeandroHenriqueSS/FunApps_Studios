<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <!-- Light theme colors -->
        <item name="strongColor">@color/black</item>
        <item name="labelColor">@color/colorAccent</item>
        <item name="dividerColor">@color/lt_grey</item>
        <item name="gridColor">@color/white</item>

    </style>

    <!-- Base application dark theme. -->
    <style name="AppThemeDark" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="colorControlHighlight">@color/colorAccentDark</item>

        <!-- Dark theme colors -->
        <item name="strongColor">@color/lt_grey</item>
        <item name="labelColor">@color/colorAccentDark</item>
        <item name="dividerColor">@color/black</item>
        <item name="gridColor">@color/colorPrimaryDark</item>

    </style>


    <!-- Fullscreen Light Theme -->
    <style name="FullscreenTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="strongColor">@color/lt_grey</item>
    </style>

    <!-- Fullscreen Dark Theme -->
    <style name="FullscreenDarkTheme" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="strongColor">@color/lt_grey</item>
    </style>

</resources>